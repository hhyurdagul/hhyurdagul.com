---
import { Image } from "astro:assets";
import ProfilePicture from "../assets/profile.webp";
import NavLink from "./links/NavLink.astro";
import Linkedin from "./links/Linkedin.astro";
import Github from "./links/Github.astro";
import X from "./links/X.astro";
---

<aside class="navigation">
  <Image
    src={ProfilePicture}
    alt="A portrait of Hasan Hüseyin Yurdagül"
    class="profile-image"
  />
  <h1>Hasan H. Yurdagül</h1>
  <h3>Machine Learning Engineer</h3>

  <nav class="nav-links" aria-label="Page Sections">
    <NavLink href="/">Home</NavLink>
    <NavLink href="/blog">Blog</NavLink>
    <NavLink href="/projects">Projects</NavLink>
  </nav>

  <div class="contact-links" aria-label="Social Media Links">
    <Linkedin />
    <Github />
    <X />
  </div>
</aside>

<style>
  .navigation {
    width: 30%;
    position: static;
    top: 6rem;
    align-self: flex-start;
  }

  .profile-image {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    margin-bottom: 1.5rem;
    border: 3px solid var(--border-color);
    box-shadow: var(--shadow-light);
    transition:
      transform var(--transition-speed) cubic-bezier(0.175, 0.885, 0.32, 1.275),
      box-shadow var(--transition-speed) ease;
    filter: grayscale(50%);
  }

  .profile-image:hover {
    transform: scale(1.08) rotate(4deg);
    box-shadow: var(--shadow-heavy);
    filter: grayscale(0%);
  }

  .nav-links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 2.5rem;
    align-items: flex-start;
  }

  .contact-links {
    display: flex;
    margin-top: 2rem;
    gap: 1rem;
  }

  @media (max-width: 820px) {
    .navigation {
      width: 100%;
      position: static;
      margin-bottom: 4rem;
      text-align: center;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .nav-links {
      flex-direction: row;
      justify-content: center;
      gap: 2rem;
      width: 100%;
    }

    .contact-links {
      justify-content: center;
    }
  }
</style>
